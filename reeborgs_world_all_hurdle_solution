def turn_around():
    turn_left()
    turn_left()
def turn_right():
    turn_left()
    turn_left()
    turn_left()
while not at_goal():
    if front_is_clear():
        move()
        turn_right()
        if wall_in_front():
            turn_left()
        else:
            move()
        
      
    elif wall_in_front():
        turn_left()
        if front_is_clear():
            move()
        else:
            turn_left()
            move()
        turn_right()
      
       
    
    

